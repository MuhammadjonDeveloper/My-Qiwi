<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:padding="10dp" android:shape="rectangle">
            <corners android:radius="10dp" />
            <size android:width="120dp" android:height="40dp" />

            <stroke android:width="2dp" android:color="@color/colorYellow" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:padding="10dp" android:shape="rectangle">
            <corners android:radius="10dp" />
            <size android:width="120dp" android:height="40dp" />

            <stroke android:width="2dp" android:color="@color/colorDarkGray" />
        </shape>
    </item>
</selector>